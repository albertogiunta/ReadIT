<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".viewPresenter.linksHome.LinksActivity"
        android:background="@color/appBG"
        >

    <include
            android:id="@+id/emptyLayout"
            layout="@layout/section_empty_link_list"
            tools:visibility="gone"
            />

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_plus"
            android:id="@+id/fabAdd"
            app:backgroundTint="@color/colorAccent"
            app:useCompatPadding="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.974"
            app:fabSize="normal"
            app:elevation="6dp"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@+id/adLayout"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            />

    <include
            android:id="@+id/adLayout"
            layout="@layout/section_ad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintVertical_bias="1.0"
            />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvLinks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/appBG"
            tools:listitem="@layout/item_link_1"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toTopOf="@+id/adLayout"
            >
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
