<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".viewPresenter.linksList.LinksListCompatActivity"
        android:background="@color/appBG"
        >

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?android:attr/colorPrimary"
            android:elevation="4dp"
            app:titleTextColor="@color/btnTextPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />

    <include
            android:id="@+id/landingScreenLayout"
            layout="@layout/section_empty_link_list"
            tools:visibility="gone"
            />

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_plus"
            android:id="@+id/fabAdd"
            app:backgroundTint="@color/colorAccent"
            app:useCompatPadding="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.974"
            app:fabSize="normal"
            app:elevation="6dp"
            android:focusable="true"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_unlock_bg"
            android:drawableLeft="@drawable/ic_unlock"
            android:drawablePadding="8dp"
            android:textAlignment="viewStart"
            android:paddingEnd="17dp"
            tools:text="You've 10 unread links!\nWhy not just read 'em now?"
            android:textAllCaps="false"
            app:layout_constraintVertical_bias="0.97"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:id="@+id/btnUnlock"
            app:layout_constraintEnd_toStartOf="@+id/fabAdd"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:visibility="gone"
            tools:visibility="visible"
            android:textSize="14sp"
            />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvLinks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/appBG"
            tools:listitem="@layout/item_link_1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            >
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
