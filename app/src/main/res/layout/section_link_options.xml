<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:layout_marginTop="-8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#fff"
        android:layout_marginBottom="16dp"
        android:id="@+id/clEditButtons"
        android:visibility="gone"
        tools:visibility="visible"
        >

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share"
            android:id="@+id/ibShare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/ibEdit"
            android:background="@android:color/transparent"
            android:padding="8dp"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_edit"
            android:id="@+id/ibEdit"
            app:layout_constraintStart_toEndOf="@+id/ibShare"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/ibCopy"
            android:background="@android:color/transparent"
            android:padding="8dp"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_copy"
            android:id="@+id/ibCopy"
            app:layout_constraintStart_toEndOf="@+id/ibEdit"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/ibRemove"
            android:background="@android:color/transparent"
            android:padding="8dp"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete"
            android:id="@+id/ibRemove"
            app:layout_constraintStart_toEndOf="@+id/ibCopy"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/transparent"
            android:padding="8dp"
            />
</android.support.constraint.ConstraintLayout>